<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoymm.damianmuca.snowingeffect.MainActivity"
    android:weightSum="100"
    android:background="@color/backgroundColor"
    >


    <!-- Start in foreground -->
    <LinearLayout
        style="@style/snowflakes_settings_ll"
        android:clickable="true"
        android:onClick="startBackgroundActivity"
        android:background="#4ab9d2"
        >
        <ImageView
            style="@style/wrap_content.snowflake_iv"
            android:src="@drawable/menu_snow_1" />
        <TextView
            style="@style/wrap_content"
            android:text="@string/start_in_foreground"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>

    <!-- Settings -->
    <LinearLayout
        style="@style/snowflakes_settings_ll"
        android:clickable="true"
        android:onClick="openSettingsActivity"
        android:background="#4ab9d2"
        >
        <ImageView
            style="@style/wrap_content.snowflake_iv"
            android:src="@drawable/menu_snow_1" />
        <TextView
            style="@style/wrap_content"
            android:text="@string/settings"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
</LinearLayout>
